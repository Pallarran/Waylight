{
  "version": 2,
  "builds": [
    {
      "src": "packages/web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "packages/web/api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "packages/web/api/sync-live-data.ts": {
      "maxDuration": 840
    },
    "packages/web/api/manual-sync.ts": {
      "maxDuration": 840
    }
  },
  "crons": [
    {
      "path": "/api/sync-live-data",
      "schedule": "*/15 * * * *"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/web/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "pnpm --filter @waylight/shared build && pnpm --filter @waylight/web build",
  "installCommand": "pnpm install"
}