{
  "crons": [
    {
      "path": "/api/sync-live-data",
      "schedule": "0 8 * * *"
    }
  ],
  "buildCommand": "pnpm --filter @waylight/shared build && pnpm --filter @waylight/web build",
  "installCommand": "pnpm install",
  "outputDirectory": "packages/web/dist",
  "functions": {
    "api/*.ts": {
      "maxDuration": 300
    }
  },
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}