{
  "name": "@waylight/shared",
  "version": "1.0.0",
  "description": "Shared types, utilities, and business logic for Waylight",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly --outDir dist",
    "dev": "tsup --watch",
    "lint": "eslint src --ext ts,tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/ui": "^3.2.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "date-fns": "^3.3.1",
    "zod": "^3.22.4"
  }
}
